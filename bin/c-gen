#!/bin/bash

# This script is used for creating new .c/.h source files
# Usage: c-gen <name>

FILE_NAME=$1

if [ -z "$FILE_NAME" ]; then
    echo "[`basename $0`] No filename was provided."
    exit 1
fi

FILE_NAME_UPPER="${FILE_NAME^^}"

# Create header file
cat > "$FILE_NAME.h" << EOF
#ifndef ${FILE_NAME_UPPER}_H
#define ${FILE_NAME_UPPER}_H

#endif
EOF

# Create C file
cat > "$FILE_NAME.c" << EOF
#include "${FILE_NAME}.h"
EOF

