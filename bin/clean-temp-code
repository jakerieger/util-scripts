#!/bin/bash

if [ -z "$CODE_DIR" ]; then
    echo "CODE_DIR is not set"
    exit
fi

TEMP_DIR=$CODE_DIR/temp

if [ -d "$TEMP_DIR" ]; then
    echo "This will erase everything in $TEMP_DIR."
    read -p "Continue? (Y/n): " response
    
    if [[ "$response" == "n" ]]; then
        echo "Exiting."
        exit
    fi
fi

rm -rf $TEMP_DIR
mkdir $TEMP_DIR
