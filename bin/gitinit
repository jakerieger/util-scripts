#!/bin/bash

# Initializes a git repository in the current directory and creates a .gitignore and README.md

read -p "Initialize git repository in current directory? (y/N): " response
if [[ "$response" != "y" ]]; then
    echo "[`basename $0`] Exiting"
    exit
fi

git init .
touch .gitignore

cat > README.md << EOF
# Readme

This is the readme for this repository
EOF